#:kivy 1.0
<Account>:
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "20dp"
        Image:
            id: profile_picture
            source: "assets/icons/user.png"
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": .5}
        Label:
            id: username
            text: ""
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": .5}
            color: app.colors.primary
        MDFloatLayout:
            MDRaisedButton:
                text: "Сменете профилната снимка"
                pos_hint: {"center_x": .5, "center_y": .83}
                text_color: app.colors.white
                line_color: app.colors.primary
                md_bg_color: app.colors.primary
                on_release:
                    root.change_profile_picture()
            MDRaisedButton:
                text: "Излезте"
                pos_hint: {"center_x": .5, "center_y": .7}
                text_color: app.colors.white
                line_color: app.colors.primary
                md_bg_color: app.colors.primary
                on_release:
                    root.logout()