#:kivy 1.0
<History>:
    orientation: 'vertical'
    spacing: dp(8)
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: dp(42)
            Text:   
                text: 'История'
                font_name: app.fonts.heading
                font_size: app.fonts.size.h2
                color: app.colors.tertiary
                halign: 'center'
        BoxLayout:
            size_hint_y: .25
            id: wrapper_overview
            orientation: 'vertical'
            padding: [dp(12), dp(4)]
            BoxLayout:
                size_hint_y: None
                height: dp(24)
                SoftSpinner:
                    id: sp_overview
                    text: 'Изхарчено'
                    values: ["Изхарчено", "Спестено"]
                    size_hint_x: .4
                    radius: [self.height/2]
            BoxLayout:
                orientation: 'vertical'
                Text:   
                    text: '85.49 лв.'
                    font_name: app.fonts.heading
                    font_size: app.fonts.size.h1
                    color: app.colors.primary
                    valign: 'bottom'
                    halign: 'center'
        Widget:
            size_hint_y: .05
        BoxLayout:
            id: wrapper_transactions
            size_hint_y: .7
            orientation: 'vertical'
            padding: dp(10)
            BoxLayout:
                ScrollView:
                    do_scroll: [False, True]
                    size_hint_y: None
                    height: self.parent.height
                    GridLayout:
                        id: gl_history
                        cols: 1
                        spacing: dp(12)
                        size_hint_y: None
                        height: self.minimum_height