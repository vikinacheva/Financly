#:kivy 1.0
<History>:
    orientation: 'vertical'
    spacing: dp(8)
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: dp(42)
            Text:   
                text: 'История за месеца'
                font_name: app.fonts.heading
                font_size: app.fonts.size.h2
                color: app.colors.tertiary
                halign: 'center'
        BoxLayout:
            size_hint_y: None
            height: dp(38)
            Text:   
                id: monthly_expenses
                text: '0 лв.'
                font_name: app.fonts.heading
                font_size: app.fonts.size.h4
                color: app.colors.red
                valign: 'bottom'
                halign: 'center'
            Text:   
                id: monthly_savings
                text: '0 / 0 лв.'
                font_name: app.fonts.heading
                font_size: app.fonts.size.h4
                color: app.colors.green
                valign: 'bottom'
                halign: 'center'
        Widget:
            size_hint_y: .05
        BoxLayout:
            id: wrapper_transactions
            size_hint_y: .7
            orientation: 'vertical'
            padding: dp(10)
            BoxLayout:
                ScrollView:
                    do_scroll: [False, True]
                    size_hint_y: None
                    height: self.parent.height
                    GridLayout:
                        id: gl_history
                        cols: 1
                        spacing: dp(12)
                        size_hint_y: None
                        height: self.minimum_height