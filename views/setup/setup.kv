#:kivy 1.0
<Setup>:
    name: "setup"
    MDFloatLayout: 
        md_bg_color: app.colors.white 
        MDCard: 
            size_hint: .9, .8
            pos_hint: {"center_x": .5, "center_y": .5}
            Carousel: 
                id: slide
                MDFloatLayout:
                    MDLabel:
                        text: "Каква е твоята начална сума?"
                        size_hint_x: .8
                        pos_hint: {"center_x": .53, "center_y": .7}
                        font_name: app.fonts.body
                        color: app.colors.primary
                    MDFloatLayout:
                        size_hint: .7, .07
                        pos_hint: {"center_x": .5, "center_y": .5}
                        TextInput:
                            id: budget
                            hint_text: "Сума в лв."
                            size_hint_y: .75
                            pos_hint: {"center_x": .45, "center_y": .3}
                            background_color: 1, 1, 1, 0
                            font_name: app.fonts.body
                            foreground_color: app.colors.input_font
                            font_size: app.fonts.size.h6        
                            cursor_color: app.colors.input_font
                            cursor_width: "2sp"
                            multiline: False
                            required: True
                        MDFloatLayout:                
                            pos_hint: {"center_x": .45, "center_y": 0}
                            size_hint_y: .03
                            md_bg_color: app.colors.dash    
                    MDFlatButton:
                        text: "Следващ"
                        theme_text_color: "Custom"
                        text_color: app.colors.white
                        font_name: app.fonts.space
                        md_bg_color: app.colors.primary
                        size_hint_x: .8
                        pos_hint: {"center_x": .5, "center_y": .2}
                        on_release:
                            root.submit_starting_budget(budget.text)
                            root.next()
                MDFloatLayout:
                    MDLabel:
                        text: "Какъв е сегашният ти месечен доход (заплата)?"
                        size_hint_x: .8
                        pos_hint: {"center_x": .53, "center_y": .7}
                        font_name: app.fonts.body
                        color: app.colors.primary
                    MDFloatLayout:
                        size_hint: .7, .07
                        pos_hint: {"center_x": .5, "center_y": .5}
                        TextInput:
                            id: salary
                            hint_text: "Сума в лв."
                            size_hint_y: .75
                            pos_hint: {"center_x": .45, "center_y": .3}
                            background_color: 1, 1, 1, 0
                            font_name: app.fonts.body
                            foreground_color: app.colors.input_font
                            font_size: app.fonts.size.h6        
                            cursor_color: app.colors.input_font
                            cursor_width: "2sp"
                            multiline: False
                            required: True
                        MDFloatLayout:                
                            pos_hint: {"center_x": .45, "center_y": 0}
                            size_hint_y: .03
                            md_bg_color: app.colors.dash
                    MDFlatButton:
                        text: "Предишен"
                        theme_text_color: "Custom"
                        text_color: app.colors.white
                        font_name: app.fonts.space
                        md_bg_color: app.colors.primary
                        size_hint_x: .35
                        pos_hint: {"center_x": .3, "center_y": .2}
                        on_release:
                            root.previous()
                    MDFlatButton:
                        text: "Следващ"
                        theme_text_color: "Custom"
                        text_color: app.colors.white
                        font_name: app.fonts.space
                        md_bg_color: app.colors.primary
                        size_hint_x: .35
                        pos_hint: {"center_x": .7, "center_y": .2}
                        on_release:
                            root.next1()
                MDFloatLayout:
                    MDLabel:
                        text: "Колко % от месечните си доходи желаеш да спестяваш?"
                        color: app.colors.primary
                        size_hint_x: .8
                        pos_hint: {"center_x": .53, "center_y": .7}
                        font_name: app.fonts.body
                    MDFloatLayout:
                        size_hint: .7, .07
                        pos_hint: {"center_x": .5, "center_y": .5}
                        TextInput:
                            id: savings
                            hint_text: "Сума в %"
                            size_hint_y: .75
                            pos_hint: {"center_x": .45, "center_y": .3}
                            background_color: 1, 1, 1, 0
                            font_name: app.fonts.body
                            foreground_color: app.colors.input_font
                            font_size: app.fonts.size.h6        
                            cursor_color: app.colors.input_font
                            cursor_width: "2sp"
                            multiline: False
                            required: True
                        MDFloatLayout:                
                            pos_hint: {"center_x": .45, "center_y": 0}
                            size_hint_y: .03
                            md_bg_color: app.colors.dash
                    MDFlatButton:
                        text: "Предишен"
                        theme_text_color: "Custom"
                        text_color: app.colors.white
                        font_name: app.fonts.space
                        md_bg_color: app.colors.primary
                        size_hint_x: .35
                        pos_hint: {"center_x": .3, "center_y": .2}
                        on_release:
                            root.previous1()
                    MDFlatButton:
                        text: "Готово"
                        theme_text_color: "Custom"
                        text_color: app.colors.white
                        font_name: app.fonts.space
                        md_bg_color: app.colors.primary
                        size_hint_x: .35
                        pos_hint: {"center_x": .7, "center_y": .2}
                        on_release:
                            root.manager.transition.direction = "left"
                            root.ready()
    MDFloatLayout:
        Image:
            source: "assets/imgs/setup.png"
            pos_hint: {"center_x": .5, "center_y": .8}
            size_hint: 1, 1
    MDIconButton:
        id: icon
        icon: "numeric-1-circle"
        pos_hint: {"center_x": .34, "center_y": .94}
        theme_text_color: "Custom"
        user_font_size: app.fonts.size.h1
        text_color: app.colors.primary
    MDProgressBar:
        id: progress
        size_hint_x: .1
        pos_hint: {"center_x": .42, "center_y": .94}
        color: app.colors.secondary
    MDIconButton:
        id: icon1
        icon: "numeric-2-circle"
        pos_hint: {"center_x": .5, "center_y": .94}
        theme_text_color: "Custom"
        user_font_size: app.fonts.size.h1
        text_color: app.colors.primary
    MDProgressBar:
        id: progress1
        size_hint_x: .1
        pos_hint: {"center_x": .58, "center_y": .94}
        color: app.colors.secondary
    MDIconButton:
        icon: "numeric-3-circle"
        pos_hint: {"center_x": .66, "center_y": .94}
        theme_text_color: "Custom"
        user_font_size: app.fonts.size.h1
        text_color: app.colors.primary
    