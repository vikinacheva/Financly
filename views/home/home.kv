#:kivy 1.0
<Home>:
	name: 'home'
    RelativeLayout:
		BoxLayout:
			orientation: 'vertical'
			SoftBox:
				orientation: 'vertical'
				size_hint_y: .6
				padding: dp(14)
				vertical: True
				bcolor: [app.colors.tertiary, app.colors.primary]
				BoxLayout:
    				orientation: "horizontal"
    				spacing: 500
    				padding: 10
    				Image:
    				    source: "assets/icons/logo.png"
    				    size_hint: None, None
    				    size: 75, 75
						pos_hint: {"center_y": .85}
					Image:
    					source: "assets/icons/user.png"
    					size_hint: None, None
    					size: 75, 75
						pos_hint: {"center_y": .85}
				Text: 
					text: "Текущ баланс"
					color: app.colors.white
					font_name: app.fonts.heading
					font_size: app.fonts.size.h1
					halign: 'center'
					valign: 'bottom'
					opacity: .8
				Text: 
					text: "12, 450.02 лв."
					color: app.colors.white
					font_name: app.fonts.heading
					font_size: app.fonts.size.h3
					halign: 'center'
				BoxLayout:
					Widget:
					AnchorLayout:
						size_hint_x: None
						width: self.height
						BackBox:
							padding: dp(8)
							bcolor: [1,1,1, .2]
							radius: [self.height*.3]
							size_hint: [None, None]
							size: [dp(52), dp(52)]
							IconButton:
								source: 'assets/icons/income.png'
								on_release: root.add_new(False)
					AnchorLayout:
						size_hint_x: None
						width: self.height
						BackBox:
							padding: dp(8)
							bcolor: [1,1,1, .2]
							radius: [self.height*.3]
							size_hint: [None, None]
							size: [dp(52), dp(52)]
							IconButton:
								source: 'assets/icons/expense.png'
								on_release: root.add_new()
					Widget:
				Widget:
			Widget:
				size_hint_y: .4
		BoxLayout:
			orientation: 'vertical'
			Widget:
			BackBox:
				orientation: 'vertical'
				bcolor: app.colors.white
				radius: [dp(42), dp(42), 0,  0]
				padding: dp(15)
				Text: 
					text: 'Транзакции'
					color: app.colors.primary
					font_name: app.fonts.subheading
					font_size: app.fonts.size.h4
					halign: 'center'
					valign: 'top'
					size_hint_y: None
					height: dp(28)
				BoxLayout:
					ScrollView:
						do_scroll: [False, True]
						size_hint_y: None
						height: self.parent.height
						GridLayout:
							id: gl_transactions
							cols: 1
							size_hint_y: None
							height: self.minimum_height
							spacing: dp(20)

<TileAction>:
	background: ''
	background_color: [0,0,0, .2]
	AnchorLayout:
		anchor_y: 'bottom'
		BackBox:
			orientation: 'vertical'
			padding: dp(12)
			bcolor: app.colors.white
			size_hint_y: None
			height: dp(128)
			GridLayout:
				cols: 1
				FlatButton:
					text: 'Редактирай'
					color: app.colors.primary
					font_name: app.fonts.heading
					halign: 'left'
					size_hint_y: None
					height: dp(42)
				BackBox:
					size_hint_y: None
					height: dp(1)
					bcolor: app.colors.light
				FlatButton:
					text: 'Изтрий'
					color: app.colors.red
					font_name: app.fonts.heading
					halign: 'left'
					size_hint_y: None
					height: dp(42)
<AddNew>:
	background: ''
	background_color: [0,0,0, .2]
	AnchorLayout:
		anchor_y: 'bottom'
		BackBox:
			orientation: 'vertical'
			padding: dp(12)
			bcolor: app.colors.white
			size_hint_y: .9
			radius: [dp(42), dp(42), 0, 0]
			BoxLayout:
				spacing: dp(8)
				size_hint_y: None
				height: dp(42)
				padding: [dp(0), 0, 0, dp(10)]
				FlatButton:
					text: 'Отхвърли'
					color: app.colors.secondary
					font_name: app.fonts.subheading
					font_size: app.fonts.size.h6
					size_hint_x: .3
					on_release: root.dismiss()
				Text: 
					text: "Разход" if root.expense else "Приход"
					color: app.colors.primary
					font_name: app.fonts.heading
					font_size: app.fonts.size.h4
					halign: 'center'
					size_hint_x: .4
				FlatButton:
					text: 'Потвърди'
					color: app.colors.secondary
					font_name: app.fonts.subheading
					font_size: app.fonts.size.h6
					size_hint_x: .3
					on_release: root.confirm()
			BoxLayout:
				orientation: 'vertical'
				spacing: dp(14)
				padding: [0,dp(12),0,0]
				BackBox:
					size_hint_y: None
					height: dp(42)
					bcolor: app.colors.light
					radius: [self.height*.2]
					padding: dp(4)
					OutlineTextField:
						id: title
						hint_text: 'Заглавие'
						bcolor: [0,0,0,0]
				BackBox:
					size_hint_y: None
					height: dp(42)
					bcolor: app.colors.light
					radius: [self.height*.2]
					padding: dp(4)
					OutlineTextField:
						hint_text: 'Таг'
						bcolor: [0,0,0,0]
				BoxLayout:
					size_hint_y: None
					height: dp(54)
					orientation: 'vertical'
					Text: 
						id: new_amount
						text: "0.00"
						color: app.colors.primary
						font_name: app.fonts.heading
						font_size: app.fonts.size.h3
						halign: 'center'
					Text: 
						text: "Сума"
						color: app.colors.primary
						font_name: app.fonts.heading
						font_size: app.fonts.size.h5
						halign: 'center'
						opacity: .7
						size_hint_y: None
						height: dp(18)
				GridLayout:
					id: gl_buttons
					cols: 3
					spacing: dp(32)
					padding: [dp(32), dp(4), dp(32), dp(12)]

<KeyPad>:
	size_hint: [1, 1]
	height: self.width
	canvas.before:
		Color:
			rgba: [0,0,0,0] if root.non_numeric else app.colors.light
		Ellipse:
			pos: self.pos
			size: self.size